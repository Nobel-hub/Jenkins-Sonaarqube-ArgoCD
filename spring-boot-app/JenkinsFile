pipeline {
    agent {
        docker {
            image 'abhishekf5/maven-abhishek-docker-agent:v1'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        SONAR_URL = "http://192.168.56.13:9000"
        DOCKER_REPO = "nobeldhakal123/springbootapp:v1"
    }

    stages {

        stage('Checkout') {
            steps {
                echo "Checking out source code..."
            }
        }

        stage('Build and Test') {
            steps {
                echo "Building Spring Boot app..."
                sh 'mvn clean package -f spring-boot-app/pom.xml'
            }
        }

        stage('Static Code Analysis') {
            steps {
                withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
                    sh 'mvn sonar:sonar -f spring-boot-app/pom.xml -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Building a Docker image of the Java app..."
                sh "docker build -t ${env.DOCKER_REPO} spring-boot-app"
            }
        }

        stage('Push Docker Image') {
            steps {
                echo "Pushing the Docker image to Docker Hub..."
                withDockerRegistry([credentialsId: 'docregcred', url: '']) {
                    sh "docker push ${env.DOCKER_REPO}"
                }
            }
        }
    }
}
